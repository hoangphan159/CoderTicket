= simple_form_for @event do |f|
  = f.input :name
  = f.input :starts_at,
    as: :datetime,
    required: false,
    :error => false
  = f.input :ends_at, as: :datetime
  = f.association :venue,
    :required => false,
    :error => false,
    :include_blank => false,
    :include_hidden => false
  = f.input :hero_image_url, label: 'Image'
  = f.input :extended_html_description,
    label: 'Description',
    required: false,
    :error => false
  = f.association :category,
    required: false,
    :error => false,
    include_blank: false,
    include_hidden: false
  = f.button :submit, class: 'btn-success'
